<html>
<h2 align="center" >Docs List</h2>
<body style="background:linear-gradient(#FF9966,#FFCCCC);">
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

 <% if (current_member.person!= 'Student')%>

<br />
<div align="right" style="margin-right: 3%;">
<%= link_to "New Document", new_document_path, class: "btn btn-primary" %></div>
<%end%>
<table class = "table table-bordered table-striped table-hover" align="center" style="width: 80%;background-color: white">
   <thead>.
      <tr style="background-color: grey;font-size: 17px;">
         <th>Name</th>
        
         <th>Download Link</th>
          <% if (current_member.person!= 'Student')%>
         <th>Delete Link </th>
         <%end%>
         
      </tr>
   </thead>
   
   <tbody>
      <% @documents.each do |document| %>
         
         <tr>
            <td><%= document.name %></td>
            <td><%= link_to "Download","/download/#{document.name}",method: :get, class: "btn btn-primary" %></td>
            <% if (current_member.person!= 'Student')%>
            <td><%= button_to "Delete",  document, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{document.name}?" %></td>
            <%end%>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
</body>
</html>
