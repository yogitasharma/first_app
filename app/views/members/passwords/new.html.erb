<html>
<body style="background-color: #DCDCDC;margin-bottom: 100px;">

<div  align="center" style="width:400px;margin-left: 35%;border-style: grooev;border-color:#d3d3d3;background-color: white;padding: 3%;margin-top: 5%;margin-bottom: 3%;">
<div style="color:red;font-size: 12px;">
  <%= devise_error_messages! %>
</div>
<h2 style="color:blue;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
 
  <div class="field">
    <%= f.label :email %><br />
    <div>
    <%= f.email_field :email, autofocus: true ,:class=> 'form-control'%></div>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Send me reset password instructions",:class=> 'btn clor' %>
  </div>
<% end %>

<%= render "members/shared/links" %>
</div>
</body>
</html>
<style type="text/css">
  .clor{
    background-color:#FF4500;
  }
</style>