<html>
<body style="background-color: #FFD993;margin-bottom: 100px;">
<div class="row">
<div  align="center" style="margin-left: 10%;background:linear-gradient(#FF9966,#FFCCCC);margin-top: 5%;margin-bottom: 3%;padding: 5%;" class='col-sm-7'>
<h4 align="left"><b>Notice</b></h4>
<% if !flash[:noticeerr].blank?%>
<div class="alert alert-success">
  <%= flash[:noticeerr] %>
  </div>
  <%end%>
<% if !flash[:error].blank?%>  
  <div class="alert alert-danger">
  <%= flash[:error]%>
</div>
<%end%>
<%= form_tag('/noticeupdate', :method=>'post') do %>
 
 <div class="field">
 <div align="left">
    <%= label_tag :subject %><br/></div>
    <div>
    <%= text_field_tag :subject,"", autofocus: true,:class=>'form-control' %></div>
  </div>

  <div class="field">
  <div align="left">
    <%= label_tag :department %><br /></div>
    <div>
    <%= text_field_tag :department,"",:class=>'form-control' %></div>
  </div>

  <div class="field">
  <div align="left">
    <%= label_tag :semester %><br /></div>
    <div>
    <%= text_field_tag :semester,"",:class=>'form-control' %></div>
  </div>
  <div class="field">
  <div align="left">
    <%= label_tag :noticedescription %><br /></div>
    <div>
    <%= text_area_tag :noticedescription,"", :rows => 8, :cols => 90 %></div>
  </div>
   
<br/>
  <div class="actions">
    <%= submit_tag "Post",:class=>'btn clor' %>
  </div>
<% end %>

</div>
<% if member_signed_in?%>
    <div class='sidebarcls col-sm-2'>
    
        <div>
          <div class="sidebar_item">
            <h3 style="color:white">Useful Links</h3>
            <br/><br/>
             <a href="http://www.ipu.ac.in/" style="color:white">GGSIPU</a>
             <br/><br/>
              <a href="http://www.lbsim.ac.in/" style="color:white">Lbsim official website</a><br/><br/>
              <a href="http://www.lbsim.ac.in/erp_login.aspx?mpgid=120&pgidtrail=120" style="color:white">ERP login</a><br/><br/>
              <a href="" style="color:white">Refrences and books</a>
            
          </div>
          <div class="sidebar_base"></div>
        </div>
        </div>
      <%end%>
      </div>
</body>
</html>
<style type="text/css">
  .clor{
    background-color:#FF4500;
  }
  .sidebarcls{
    margin-left: 100px;
    background: linear-gradient(#6633CC,#CC6600);
    color:grey;
    height: 300px;
    margin-top:5%;
  }
</style>